<mvc:View
    controllerName="clientportal.saasa.com.pe.usermanager.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
        <App >
            <pages>
                <Page showHeader="true" 
                showNavButton="true"
		        navButtonPress="onNavBack"
                title="{DetailModel>/DetailTitle}">
                    <content>
                        <core:Fragment fragmentName="clientportal.saasa.com.pe.usermanager.view.fragment.DetailHeader" type="XML"/>
                        <core:Fragment fragmentName="clientportal.saasa.com.pe.usermanager.view.fragment.DetailBody" type="XML"/>
                    </content>
                    <footer>
                        <core:Fragment fragmentName="clientportal.saasa.com.pe.usermanager.view.fragment.DetailFooter" type="XML"/>
	                </footer>
                </Page>
            </pages>
        </App>
</mvc:View>
