  <core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
>
	<Dialog title="{UploadModel>/email}" contentWidth="900px" resizable="true">
	<content>
        <f:SimpleForm 
			editable="true"
			layout="ResponsiveGridLayout"
			labelMinWidth="0"
			labelSpanL="2"
			labelSpanM="2"
			labelSpanS="12"
			adjustLabelSpan="true"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="2"
			singleContainerFullSize="true" >
			<f:content>
                <core:Title text="{i18n>fileUploaderDNIFront}" />
                <Image src="{UploadModel>/DNIAnverso}" width="100%" />
                <core:Title text="{i18n>fileUploaderDNIBack}" />
                <Image src="{UploadModel>/DNIReverso}" width="100%"/>
                
			</f:content>
		</f:SimpleForm>
        <f:SimpleForm 
			editable="true"
			layout="ResponsiveGridLayout"
			labelMinWidth="0"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="true"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="2"
			singleContainerFullSize="true" >
			<f:content>
                <core:Title text="{i18n>titleDocument2}" />
                <Label text="{i18n>fileUploaderDNIFront}"/>
                <u:FileUploader placeholder="{i18n>phFileUploaderDNIFront}" 
                    fileType="png,jpg"
                    width="100%"
                    multiple="false" 
                    maximumFileSize="5"
                    change="handleUploadDNIFront"
                    typeMissmatch="handleTypeMissmatch">    
                </u:FileUploader>
                <Label text="{i18n>fileUploaderDNIBack}"/>
                <u:FileUploader placeholder="{i18n>phFileUploaderDNIBack}" 
                    fileType="png,jpg"
                    width="100%"
                    maximumFileSize="5"
                    multiple="false" 
                    change="handleUploadDNIBack"
                    typeMissmatch="handleTypeMissmatch">
                </u:FileUploader>
			</f:content>
		</f:SimpleForm>
    </content>
    <buttons> 
        <Button type="Emphasized" text="{i18n>btnSubirDocumento}" press="onUploadDocument" />
        <Button type="Reject" text="{i18n>btnEliminarDocumento}" press="onDeleteDocument" />
        <Button type="Reject" text="{i18n>btnCancelar}" press="onCloseDialog"/>
    </buttons>

	</Dialog>
</core:FragmentDefinition>